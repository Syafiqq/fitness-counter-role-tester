<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/md_white_1000"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        tools:context="com.github.syafiqq.fitnesscounter.role.tester.controller.tester.fragment.Run1600m"
        android:fillViewport="true">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">


        <TextView
                android:text="@string/template_stopwatch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textview_clock"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_bias="0.5"
                android:gravity="center_horizontal"
                app:layout_constraintVertical_chainStyle="spread"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"/>

        <Button
                android:text="@string/command_start"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/button_start"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:background="@color/md_green_600"
                android:visibility="visible"/>

        <Button
                android:text="@string/command_send"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/button_send"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/button_reset"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"/>

        <Button
                android:text="@string/command_reset"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/button_reset"
                android:background="@color/md_yellow_600"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toEndOf="@+id/button_send"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/button_save"
                app:layout_constraintTop_toTopOf="@+id/button_send"
                app:layout_constraintBottom_toBottomOf="@+id/button_send"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                />

        <Button
                android:text="@string/command_save"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/button_save"
                app:layout_constraintStart_toEndOf="@+id/button_reset"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/button_reset"
                app:layout_constraintBottom_toBottomOf="@+id/button_reset"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"/>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/container_1"
                app:layout_constraintTop_toBottomOf="@+id/textview_clock"
                app:layout_constraintBottom_toTopOf="@+id/container_2"
                app:layout_constraintVertical_chainStyle="spread"
                app:layout_constraintStart_toStartOf="@+id/textview_clock"
                app:layout_constraintEnd_toEndOf="@+id/textview_clock"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"
                android:visibility="gone">

            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/label_participant_1"
                    android:id="@+id/edittext_participant_1"
                    android:inputType="numberSigned"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"/>

            <Button
                    android:text=""
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/button_counter_1"
                    android:layout_weight="1"
                    android:visibility="gone"/>

            <TextView
                    android:text=""
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/textview_elapsed_1"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/container_2"
                app:layout_constraintTop_toBottomOf="@+id/container_1"
                app:layout_constraintBottom_toTopOf="@+id/container_3"
                app:layout_constraintVertical_chainStyle="spread"
                app:layout_constraintStart_toStartOf="@+id/textview_clock"
                app:layout_constraintEnd_toEndOf="@+id/textview_clock"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:visibility="gone">


            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/label_participant_2"
                    android:id="@+id/edittext_participant_2"
                    android:gravity="center_vertical"
                    android:inputType="numberSigned"
                    android:layout_weight="1"/>

            <Button
                    android:text=""
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/button_counter_2"
                    android:layout_weight="1"
                    android:visibility="gone"/>

            <TextView
                    android:text=""
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/textview_elapsed_2"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/container_3"
                app:layout_constraintTop_toBottomOf="@+id/container_2"
                app:layout_constraintBottom_toTopOf="@+id/container_4"
                app:layout_constraintVertical_chainStyle="spread"
                app:layout_constraintStart_toStartOf="@+id/textview_clock"
                app:layout_constraintEnd_toEndOf="@+id/textview_clock"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:visibility="gone">


            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/label_participant_3"
                    android:id="@+id/edittext_participant_3"
                    android:gravity="center_vertical"
                    android:inputType="numberSigned"
                    android:layout_weight="1"/>

            <Button
                    android:text=""
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/button_counter_3"
                    android:layout_weight="1"
                    android:visibility="gone"/>

            <TextView
                    android:text=""
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/textview_elapsed_3"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/container_4"
                app:layout_constraintTop_toBottomOf="@+id/container_3"
                app:layout_constraintBottom_toTopOf="@+id/container_5"
                app:layout_constraintVertical_chainStyle="spread"
                app:layout_constraintStart_toStartOf="@+id/textview_clock"
                app:layout_constraintEnd_toEndOf="@+id/textview_clock"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:visibility="gone">


            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/label_participant_4"
                    android:id="@+id/edittext_participant_4"
                    android:gravity="center_vertical"
                    android:inputType="numberSigned"
                    android:layout_weight="1"/>

            <Button
                    android:text=""
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/button_counter_4"
                    android:layout_weight="1"
                    android:visibility="gone"/>

            <TextView
                    android:text=""
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/textview_elapsed_4"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/container_5"
                app:layout_constraintTop_toBottomOf="@+id/container_4"
                app:layout_constraintBottom_toTopOf="@+id/barrier2"
                app:layout_constraintVertical_chainStyle="spread"
                app:layout_constraintStart_toStartOf="@+id/textview_clock"
                app:layout_constraintEnd_toEndOf="@+id/textview_clock"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"
                android:visibility="gone">

            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/label_participant_5"
                    android:id="@+id/edittext_participant_5"
                    android:gravity="center_vertical"
                    android:inputType="numberSigned"
                    android:layout_weight="1"/>

            <Button
                    android:text=""
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/button_counter_5"
                    android:layout_weight="1"
                    android:visibility="gone"/>

            <TextView
                    android:text=""
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/textview_elapsed_5"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:visibility="gone"/>
        </LinearLayout>

        <android.support.constraint.Barrier
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/barrier2"
                app:barrierDirection="top"
                tools:layout_editor_absoluteY="492dp"
                tools:layout_editor_absoluteX="8dp"
                app:constraint_referenced_ids="button_start,button_save,button_send,button_reset"
                tools:ignore="MissingConstraints"/>

        <android.support.constraint.Group
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/group_finish"
                tools:layout_editor_absoluteY="16dp"
                app:constraint_referenced_ids="button_reset,button_save,button_send"
                android:visibility="invisible"
                tools:ignore="MissingConstraints"/>

    </android.support.constraint.ConstraintLayout>
</ScrollView>
